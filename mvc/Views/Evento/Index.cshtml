@using data
@model List<Evento>
@{
    ViewData["Title"] = "Eventos";
}    
<table>
    <tr>
        <th>Id</th>
        <th>Título</th>
        <th></th>
    </tr>

    @foreach (var evento in Model)
    {
        <tr>
            <td>@evento.Id</td>
            <td>@evento.Titulo</td>
            <td>
                <a asp-controller="Evento" asp-action="Editar" asp-route-id=@evento.Id>
                
                <button class="btn btn-danger">Editar</button>
                </a>
                </td>
                <td>
                    <a asp-controller="Evento" asp-action ="Apagar" asp-route-id =@evento.Id>
                        <button class="btn btn-danger">Apagar</button>
                    </a>

                </td>
        </tr>
    }
</table>
